<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@color/white">

    <TextView
        android:id="@+id/Login_Tv_Title"
        style="@style/PrimaryTitle"
        android:layout_marginTop="75dp"
        android:text="@string/login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/Login_Bt_Login"
        app:layout_constraintTop_toBottomOf="@+id/Login_Tv_Title">

        <TextView
            android:id="@+id/Login_Tv_Username"
            style="@style/InputLabel"
            android:text="@string/username"
            app:layout_constraintStart_toStartOf="@+id/Login_Et_Username"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Login_Et_Username"
            style="@style/TextInput"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Login_Tv_Username" />

        <TextView
            android:id="@+id/Login_Tv_Password"
            style="@style/InputLabel"
            android:layout_marginTop="20dp"
            android:text="@string/password"
            app:layout_constraintStart_toStartOf="@+id/Login_Et_Password"
            app:layout_constraintTop_toBottomOf="@+id/Login_Et_Username" />

        <EditText
            android:id="@+id/Login_Et_Password"
            style="@style/PasswordInput"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Login_Tv_Password" />

        <CheckBox
            android:id="@+id/Login_Cb_SaveSession"
            style="@style/CheckBox"
            android:layout_marginStart="-13dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@+id/Login_Et_Password"
            app:layout_constraintTop_toBottomOf="@+id/Login_Et_Password" />

        <TextView
            android:id="@+id/Login_Et_SaveSession"
            style="@style/DataText"
            android:text="@string/save_session"
            android:layout_marginStart="-5dp"
            app:layout_constraintBottom_toBottomOf="@+id/Login_Cb_SaveSession"
            app:layout_constraintStart_toEndOf="@+id/Login_Cb_SaveSession"
            app:layout_constraintTop_toTopOf="@+id/Login_Cb_SaveSession" />

        <TextView
            android:id="@+id/Login_Et_ResetPassword"
            style="@style/RedirectText"
            android:text="@string/forgot_password"
            app:layout_constraintStart_toStartOf="@+id/Login_Et_Password"
            app:layout_constraintTop_toBottomOf="@+id/Login_Cb_SaveSession" />

        <TextView
            android:id="@+id/Login_Et_CreateAccount"
            style="@style/RedirectText"
            android:layout_marginTop="10dp"
            android:text="@string/no_account"
            app:layout_constraintStart_toStartOf="@+id/Login_Et_ResetPassword"
            app:layout_constraintTop_toBottomOf="@+id/Login_Et_ResetPassword" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/Login_Bt_Login"
        style="@style/PrimaryButton"
        android:layout_width="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="75dp"
        android:layout_marginEnd="25dp"
        android:text="@string/login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>