<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Login">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineEnd"
        app:layout_constraintStart_toStartOf="@+id/guidelineStart"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/Login_Tv_Title"
            style="@style/PrimaryTitle"
            android:text="@string/login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/Login_Tv_Username"
            style="@style/InputLabel"
            android:layout_marginTop="35dp"
            android:text="@string/username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Login_Tv_Title" />

        <EditText
            android:id="@+id/Login_Et_Username"
            style="@style/TextInput"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Login_Tv_Username"
            android:layout_width="match_parent" />

        <TextView
            android:id="@+id/Login_Tv_Password"
            style="@style/InputLabel"
            android:layout_marginTop="15dp"
            android:text="@string/password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Login_Et_Username" />


        <EditText
            android:id="@+id/Login_Et_Password"
            style="@style/PasswordInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Login_Tv_Password" />

        <CheckBox
            android:id="@+id/Login_Cb_SaveSession"
            style="@style/CheckBox"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Login_Et_Password" />

        <TextView
            android:id="@+id/Login_Et_SaveSession"
            style="@style/DataText"
            android:letterSpacing=".1"
            android:text="@string/save_session"
            app:layout_constraintBottom_toBottomOf="@+id/Login_Cb_SaveSession"
            app:layout_constraintStart_toEndOf="@+id/Login_Cb_SaveSession"
            app:layout_constraintTop_toTopOf="@+id/Login_Cb_SaveSession" />


        <TextView
            android:id="@+id/Login_Et_ResetPassword"
            style="@style/RedirectText"
            android:layout_marginTop="25dp"
            android:letterSpacing=".1"
            android:text="@string/forgot_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Login_Cb_SaveSession"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <TextView
            android:id="@+id/Login_Et_CreateAccount"
            style="@style/RedirectText"
            android:layout_marginTop="15dp"

            android:text="@string/no_account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Login_Et_ResetPassword"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <Button
            android:id="@+id/Login_Bt_Login"
            style="@style/PrimaryButton"
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:text="@string/login"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/Login_Et_CreateAccount"
            android:layout_height="wrap_content" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>