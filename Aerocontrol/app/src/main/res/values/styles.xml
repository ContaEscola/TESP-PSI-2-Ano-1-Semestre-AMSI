<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ImageView - Logo na Splash Screen-->
    <style name="LogoImage">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="srcCompat">@drawable/logo</item>
    </style>

    <!-- TextViews - Titulos -->
    <style name="Title" parent="android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- TextViews - Título Primário -->
    <style name="PrimaryTitle" parent="Title">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!-- TextViews - Título Secundário -->
    <style name="SecondTitle" parent="Title">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- TextViews - Labels dos Inputs -->
    <style name="InputLabel" parent="android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- TextViews - Labels e TextViews dos dados -->
    <style name="DataText" parent="android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- TextViews - TextViews dos dados SemiBold -->
    <style name="DataText_SemiBold" parent="DataText">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>

    <!-- TextViews - TextViews dos dados Bold -->
    <style name="DataText_Bold" parent="DataText">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <!-- TextViews - TextViews que dá redirect Sublinhado -->
    <style name="RedirectText" parent="DataText">
        <item name="android:letterSpacing">.1</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!-- EditText - Inputs -->
    <style name="Input" parent="android:style/Widget.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">13sp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- EditText - Input Texto -->
    <style name="TextInput" parent="Input">
        <item name="android:inputType">text</item>
    </style>

    <!-- EditText - Input Password -->
    <style name="PasswordInput" parent="Input">
        <item name="android:inputType">textPassword</item>
    </style>

    <!-- EditText - Input Numero -->
    <style name="NumberInput" parent="Input">
        <item name="android:inputType">number</item>
    </style>

    <!-- CheckBox -->
    <style name="CheckBox">
        <item name="android:layout_width"> wrap_content </item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">?attr/colorPrimary</item>
    </style>





    <!-- Button - Botão Default -->
    <style name="myButton" parent="android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_button_default</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing">.1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <!-- Button - Butão Primário -->
    <style name="PrimaryButton" parent="myButton">
        <item name="backgroundTint">@color/button_default_background_states</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
-
    <!-- Button - Butão Secundário -->
    <style name="SecondaryButton" parent="myButton">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <!-- Button - Butão Primário Outline -->
    <style name="PrimaryButtonOutline" parent="myButton">
        <item name="android:background">@drawable/round_button_outline_primary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!-- Button - Butão Secundário Outline -->
    <style name="SecondaryButtonOutline" parent="myButton">
        <item name="android:background">@drawable/round_button_outline_secondary</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <!-- Button - Butão Vermelho -->
    <style name="RedButton" parent="myButton">
        <item name="android:backgroundTint">?attr/colorError</item>
        <item name="android:textColor">?attr/colorOnError</item>
    </style>

</resources>