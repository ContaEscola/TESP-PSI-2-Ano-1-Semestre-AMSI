<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="amsi.dei.estg.ipleiria.aerocontrol">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".utils.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:usesCleartextTraffic="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.App"
        tools:targetApi="31">
        <activity
            android:name=".ui.views.Activities.PaymentMethodActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.views.Activities.FlightTicketPassengersActivity" />
        <activity
            android:name=".ui.views.Activities.FlightTicketPassengersActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName=".ui.views.Activities.FlightSearchResultsActivity" />
        <activity
            android:name=".ui.views.Activities.FlightSearchResultsActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.views.Activities.MainActivity" />
        <activity    
            android:name=".ui.views.Activities.SupportTicketInfoActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName=".ui.views.Activities.SupportTicketActivity" />
        <activity
            android:name=".ui.views.Activities.SupportTicketActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.views.Activities.MainActivity" />
        <activity
            android:name=".ui.views.Activities.EditAccountActivity"
            android:exported="false"
            android:parentActivityName=".ui.views.Activities.MainActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".ui.views.Activities.TicketInfoActivity"
            android:exported="false"
            android:parentActivityName=".ui.views.Activities.TicketsActivity" />
        <activity
            android:name=".ui.views.Activities.TicketsActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.views.Activities.MainActivity" />
        <activity
            android:name=".ui.views.Activities.StoreDetailsActivity"
            android:exported="false"
            android:parentActivityName=".ui.views.Activities.MainActivity" />
        <activity
            android:name=".ui.views.Activities.RestaurantDetailsActivity"
            android:exported="false"
            android:parentActivityName=".ui.views.Activities.MainActivity" />
        <activity
            android:name=".ui.views.Activities.ResetPasswordActivity"
            android:exported="false"
            android:parentActivityName=".ui.views.Activities.MainActivity" />
        <activity
            android:name=".ui.views.Activities.SupportActivity"
            android:exported="false"
            android:parentActivityName=".ui.views.Activities.MainActivity" />
        <activity
            android:name=".ui.views.Activities.RegisterActivity"
            android:exported="false"
            android:parentActivityName=".ui.views.Activities.MainActivity" />
        <activity
            android:name=".ui.views.Activities.LoginActivity"
            android:exported="false"
            android:parentActivityName=".ui.views.Activities.MainActivity" />
        <activity
            android:name=".ui.views.Activities.MainActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>